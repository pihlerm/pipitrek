[Unit]
Description=Autoguider Web Service for Astrophotography
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /root/astro/autoguider_web.py >> /root/astro/autoguider.log 2>&1
WorkingDirectory=/root/astro
Restart=on-failure
RestartSec=5
User=root
StandardOutput=append:/root/astro/autoguider.log
StandardError=append:/root/astro/autoguider.log

[Install]
WantedBy=multi-user.target